# CCDI Federation Service Environment Configuration
# Copy this file to .env and update the values as needed

# ============================================================================
# Application Settings
# ============================================================================
###############################################
# .env.example
# CCDI DCC Federation Service
#
# Copy to .env and adjust. Do NOT commit secrets.
# Lines starting with # are comments. Boolean values use true/false.
###############################################

######## Application ########
APP_NAME="CCDI Federation REST Service"
APP_VERSION="v1.0.0"
DEBUG=false                # true enables /docs and uvicorn reload (when run via python entrypoint)
HOST=0.0.0.0
PORT=8000

######## Memgraph / Database ########
MEMGRAPH_URI="bolt://memgraph:7687"   # Override for production
MEMGRAPH_USER="memgraph"
MEMGRAPH_PASSWORD=""                  # Use Docker/K8s secret or env injection
MEMGRAPH_DATABASE="memgraph"
MEMGRAPH_MAX_CONNECTION_LIFETIME=3600
MEMGRAPH_MAX_CONNECTION_POOL_SIZE=50

######## Redis Cache ########
# Either provide REDIS_URL or granular cache_* values below
REDIS_URL="redis://redis:6379/0"      # Format: redis://[:password]@host:port/db
CACHE_ENABLED=true
CACHE_TTL_COUNT_ENDPOINTS=1800         # 30 min
CACHE_TTL_SUMMARY_ENDPOINTS=900        # 15 min
CACHE_TTL_LIST_ENDPOINTS=300           # 5 min

######## Rate Limiting ########
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

######## CORS ########
CORS_ORIGINS="*"                       # Comma-separated list
CORS_CREDENTIALS=true
CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_HEADERS="*"

######## Logging ########
LOG_LEVEL=INFO                         # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json                        # json or text

######## Organization Metadata ########
ORGANIZATION_NAME="Example Organization"
SERVER_NAME="Example CCDI Federation Node"
CONTACT_EMAIL="support@example.com"

######## Sharing Policies ########
SHARE_LINE_LEVEL_DATA=true

######## Optional overrides (uncomment if needed) ########
# DEFAULT_PAGE_SIZE=100
# MAX_PAGE_SIZE=1000
# RATE_LIMIT_REQUESTS_PER_MINUTE=120

######## End of file ########
